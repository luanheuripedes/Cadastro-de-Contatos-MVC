@using ControleDeContatos.Models.Login;
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}
@model LoginModel


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}


@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="close">X</button>
        @TempData["MensagemErro"]
    </div>
}
<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha">
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>

    <p class="mb-4 text-sm mx-auto">
        Esqueceu senha?
        <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary text-gradient font-weight-bold">Redefinir senha</a>
    </p>
    <button type="submit" class="btn btn-primary btn-lg btn-block" style="width: 100%">Entrar</button>
</form>


